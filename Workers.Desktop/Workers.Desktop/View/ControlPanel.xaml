<UserControl x:Class="Workers.Desktop.View.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Workers.Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" Background="White" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Vezérlőpult"/>

        <StackPanel Orientation="Horizontal">
            <Label Content="Az összes dolgozó száma: "/>
            <Label Content="{Binding NumberOfEmployees}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Fizetést kapó dolgozók száma: "/>
            <Label Content="{Binding NumberOfPaidEmployees}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Fizetés nélküli dolgozók száma: "/>
            <Label Content="{Binding NumberOfUnpaidEmployees}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="A legnagyobb fizetést kapó dolgozó neve: "/>
            <Label Content="{Binding HighestSalaryEmployee}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="A legkisebb fizetést kapó dolgozó neve: "/>
            <Label Content="{Binding LowestSalaryEmployee}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Átlagkereset: "/>
            <Label Content="{Binding AverageSalary}"/>
        </StackPanel>
    </StackPanel>

</UserControl>
