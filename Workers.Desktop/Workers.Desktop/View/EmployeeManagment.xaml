<UserControl x:Class="Workers.Desktop.View.EmployeeManagment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Workers.Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="EmployeeManagment"/>

        <TextBox x:Name="EmailSearchBox" PlaceholderText="Email cím keresése..."/>
        <Button Content="Fizetést kapó dolgozó keresése" Command="{Binding FindEmployeeWithSalaryCommand}" />
        <Label Content="{Binding SearchResult}" />

        <Button Content="Fizetés nélküli dolgozó törlésére" Command="{Binding DeleteEmployeeWithoutSalaryCommand}" />
    </StackPanel>
</UserControl>
